{
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "node",
        "noEmit": true,
        "target": "ES2019",
        "module": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "strict": true,
        "incremental": false
        // "baseUrl": ".",
        // "paths": {
        //     "app": ["./src"]
        // }
    },
    "include": ["./src/**/*"],
    "exclude": [
        "**/node_modules/*",
        "**/dist/*",
        "**/cypress/*",
        "**/.eslintrc.js"
    ]
}
